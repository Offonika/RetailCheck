# Base runtime
APP_ENV=development
APP_DEBUG=false
TZ=Europe/Moscow

# Telegram bot
TELEGRAM_BOT_TOKEN=0000000000:REPLACE_ME
TELEGRAM_WEBHOOK_URL=https://example.com/webhook
TELEGRAM_WEBHOOK_SECRET=replace-me
TELEGRAM_ALLOWED_UPDATES=message,callback_query

# Google Sheets / API
GOOGLE_SERVICE_ACCOUNT_JSON=./secrets/google-service-account.json
GOOGLE_SHEETS_ID=REPLACE_SHEET_ID
GOOGLE_SHEETS_BATCH_SIZE=20
GOOGLE_API_RETRY_MAX=3

# Domain defaults
DEFAULT_TEMPLATE_OPEN_ID=opening_v3
DEFAULT_TEMPLATE_CONTINUE_ID=continue_v2
DEFAULT_TEMPLATE_CLOSE_ID=closing_v3
DELTA_THRESHOLD_RUB=300
DELTA_ALERT_COOLDOWN_SEC=3600
REMINDER_SLOTS=11:00,16:00,19:00
DELTA_ALERT_INTERVAL_MIN=5

# Storage / queues
REDIS_URL=redis://localhost:6379/0
IDEMPOTENCY_TTL_SEC=86400

# Server / webhook binding
BOT_HOST=0.0.0.0
BOT_PORT=8080

# Logging / monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Локи на создание/назначение ролей
REDIS_RUN_LOCK_TTL_SEC=10
RUN_SCOPE=shop_id_date
ALLOW_ANYONE_DEFAULT=TRUE

# Manager notifications (comma-separated chat IDs)
MANAGER_NOTIFY_CHAT_IDS=-5097458909
